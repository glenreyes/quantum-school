# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 4
indent_brace_style = Allman
insert_final_newline = true
trim_trailing_whitespace = true
curly_bracket_next_line = true

[*.ts]
quote_type = single

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.{razor,cshtml}]
charset = utf-8-bom
